<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBrown"
    tools:context=".ui.preferences.PreferencesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Vegan"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sbVegan"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/sbVegan"
                style="@style/Widget.AppCompat.SeekBar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:max="2"
                android:padding="5dp"
                android:progress="1"
                android:progressBackgroundTint="@color/customBlue"
                android:progressTint="@color/customBlue"
                android:thumb="@android:drawable/presence_online"
                android:thumbTint="@color/customWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickMarkTint="@color/customBlack" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Vegetarian"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sbVegan"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Not cheap"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sbCheap"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/sbCheap"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:max="2"
                android:padding="5dp"
                android:progress="1"
                android:progressBackgroundTint="@color/customBlue"
                android:progressTint="@color/customRed"
                android:thumb="@android:drawable/presence_online"
                android:thumbTint="@color/customWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickMarkTint="@color/customBlack" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Cheap"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sbCheap"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Has dairy"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sbDairy"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/sbDairy"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:max="2"
                android:padding="5dp"
                android:progress="1"
                android:progressBackgroundTint="@color/customBlue"
                android:progressTint="@color/customRed"
                android:thumb="@android:drawable/presence_online"
                android:thumbTint="@color/customWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickMarkTint="@color/customBlack" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Dairy Free"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sbDairy"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Has gluten"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sbGluten"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/sbGluten"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:max="2"
                android:padding="5dp"
                android:progress="1"
                android:progressBackgroundTint="@color/customBlue"
                android:progressTint="@color/customRed"
                android:thumb="@android:drawable/presence_online"
                android:thumbTint="@color/customWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickMarkTint="@color/customBlack" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Gluten Free"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sbGluten"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Not healthy"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sbHealthy"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/sbHealthy"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:max="2"
                android:padding="5dp"
                android:progress="1"
                android:progressBackgroundTint="@color/customBlue"
                android:progressTint="@color/customRed"
                android:thumb="@android:drawable/presence_online"
                android:thumbTint="@color/customWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickMarkTint="@color/customBlack" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Healthy"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sbHealthy"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Not popular"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/sbPopular"
                app:layout_constraintTop_toTopOf="parent" />

            <SeekBar
                android:id="@+id/sbPopular"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:max="2"
                android:padding="5dp"
                android:progress="1"
                android:progressBackgroundTint="@color/customBlue"
                android:progressTint="@color/customRed"
                android:thumb="@android:drawable/presence_online"
                android:thumbTint="@color/customWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tickMarkTint="@color/customBlack" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:shadowColor="@color/customRed"
                android:text="Popular"
                android:textColor="@color/customWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/sbPopular"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/btnPreferenceBack"
        android:layout_width="60dp"
        android:layout_height="34dp"
        android:layout_margin="10dp"
        android:background="@drawable/background_card"
        android:padding="14dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_back"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutPreferenceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPreferenceReset"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPreferenceSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#33691E"
            android:text="Save"
            android:textColor="@color/customWhite" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPreferenceCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#952525"
            android:text="Cancel"
            android:textColor="@color/customWhite" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPreferenceReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1A237E"
        android:text="Reset Preferences"
        android:textColor="@color/customWhite"
        app:layout_constraintBottom_toBottomOf="@+id/btnPreferenceBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPreferenceBack" />
</androidx.constraintlayout.widget.ConstraintLayout>